<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.following_users.any? %>
      <h3>Following (<%= @user.following_users.count %>)</h3>
      <div class="progress">
    <div class="progress-bar progress-bar-info" style="width: 100%"></div>
   </div>
      <ol class="following">
        
        

          <% @user.following_users.each do |user| %>
            <li>
              <%= link_to gravatar_for(user, size: 50), user %>
             <%=link_to user.name, user %>
            </li>
          <% end %>
          
      </ol>
      
    <% end %>
  </div>
  
  
</div>