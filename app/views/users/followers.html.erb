<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.follower_users.any? %>
      <h3>Followers (<%= @user.follower_users.count %>)</h3>
      <div class="progress">
  　　<div class="progress-bar progress-bar-info" style="width: 100%"></div>
　　　</div>
      <ol class="following">
       
        　<% @user.follower_users.each do |user| %>
            <li><%= link_to gravatar_for(user, size: 50), user %>
            <%= user.name %></li>
          <% end %>
       
      </ol>
    <% end %>
  </div>
</div>